# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================
MONGODB_URI=mongodb://localhost:27017/law-notifications

# ====================================
# CONFIGURACIÓN DEL SERVIDOR
# ====================================
PORT=3004
NODE_ENV=production
BASE_URL=http://localhost:3004

# ====================================
# AUTENTICACIÓN Y SEGURIDAD
# ====================================
JWT_SECRET=tu_jwt_secret_super_seguro
INTERNAL_SERVICE_TOKEN=tu_token_para_servicios_internos

# ====================================
# AWS SES (Email Service)
# ====================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
EMAIL_FROM=noreply@tudominio.com

# ====================================
# CONFIGURACIÓN DE ADMINISTRADOR
# ====================================
ADMIN_EMAIL=admin@tudominio.com
SEND_CLEANUP_REPORTS=true

# ====================================
# CRON JOBS - HORARIOS DE EJECUCIÓN
# ====================================
# Notificaciones de calendario (9:00 AM por defecto)
NOTIFICATION_CALENDAR_CRON=0 9 * * *

# Notificaciones de tareas (9:15 AM por defecto)
NOTIFICATION_TASK_CRON=15 9 * * *

# Notificaciones de movimientos (9:45 AM por defecto)
NOTIFICATION_MOVEMENT_CRON=45 9 * * *

# Notificaciones de movimientos judiciales (cada 30 minutos)
NOTIFICATION_JUDICIAL_MOVEMENT_CRON=*/30 * * * *

# Limpieza de logs (domingos a las 2:00 AM)
CLEANUP_CRON=0 2 * * 0

# ====================================
# RETENCIÓN DE LOGS (EN DÍAS)
# ====================================
# Logs de notificaciones en MongoDB
NOTIFICATION_LOG_RETENTION_DAYS=30

# Alertas entregadas en MongoDB
ALERT_LOG_RETENTION_DAYS=30

# Movimientos judiciales procesados
JUDICIAL_MOVEMENT_RETENTION_DAYS=60

# Archivos de log del sistema
FILE_LOG_RETENTION_DAYS=7

# Logs de PM2
PM2_LOG_RETENTION_DAYS=7

# ====================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ====================================
# Días de anticipación por defecto para notificaciones
DEFAULT_DAYS_IN_ADVANCE=3

# Notificar solo una vez por defecto
DEFAULT_NOTIFY_ONCE_ONLY=false

# ====================================
# CONFIGURACIÓN DE WEBSOCKET
# ====================================
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# ====================================
# CONFIGURACIÓN DE DESARROLLO
# ====================================
# Nivel de logging (debug, info, warn, error)
LOG_LEVEL=info

# Habilitar logs de debugging
DEBUG=false

# ====================================
# INTEGRACIÓN CON SERVICIOS EXTERNOS
# ====================================
# URL del servicio principal de Law Analytics
MAIN_SERVICE_URL=https://api.lawanalytics.app

# Token para autenticar con el servicio principal
MAIN_SERVICE_TOKEN=token_del_servicio_principal

# ====================================
# CONFIGURACIÓN DE ZONA HORARIA
# ====================================
# Zona horaria del servidor (usado para cron jobs)
TZ=America/Argentina/Buenos_Aires

# ====================================
# LÍMITES Y TIMEOUTS
# ====================================
# Máximo de notificaciones por lote
MAX_NOTIFICATIONS_PER_BATCH=100

# Timeout para envío de emails (ms)
EMAIL_TIMEOUT=30000

# Máximo de reintentos para emails fallidos
MAX_EMAIL_RETRIES=3

# ====================================
# CONFIGURACIÓN DE TEMPLATES
# ====================================
# Usar templates de base de datos
USE_DB_TEMPLATES=true

# Cachear templates (minutos)
TEMPLATE_CACHE_DURATION=60